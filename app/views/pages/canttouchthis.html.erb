

<%# ###################################### Accroche ####################################################### %>

<div class='aa-accroche'>
  <div class='aa-accroche-texture'>
    <div class='p-accroche-desktop'>
      <p class='p-titre p-titre-end'>La plateforme ARTAETAS, c’est la simplicité d'une plateforme dédiée mobile, c’est le choix&nbsp;</p>
      <p class='p-titre p-titre-start'>en oeuvres d'arts de toutes catégories, c’est la liberté de vendre et d'acheter, pour tous, artistes, amateurs et collectionneurs.</p>
    </div>
    <div class='p-accroche-mobile'>
      <p class="p-titre p-titre-center">ARTAETAS, c’est la simplicité, c’est le choix, c’est la liberté, </p>
      <p class="p-titre p-titre-center">pour tous, artistes, amateurs et collectionneurs.</p>
    </div>
    <a href="" class="aa-accroche-button" data-toggle="modal" data-target="#infosmodal">ARTAETAS c'est quoi?</a>
  </div>
</div>

<%# ###################################### Carousel ####################################################### %>
<div class="grid-container">
  <div class="grid">
    <div class="grid-sizer"></div>
    <div class="gutter-sizer"></div>
    

<%# ###################################### EACH ON Standard ####################################################### %>

<% a_pre = [] %>
<% a_pre.replace(@annonces_pre) %>
<%# i = Varlocale.where(nomchamp: "OccurenceMalu").first.valeurchamp %>
<% i = 4 %>
<% j = 0 %>
     <% @annonces.each do |t| %>
       <% if j < 10 %>
         <% if a_pre[0].nil? %>
          <% a_pre = [] %>
          <% a_pre.replace(@annonces_pre) %>
         <% end %>
         <% if i == 4 %>
           <% unless a_pre[0].nil? %>
             <div class="grid-item aa-formule-malu">
               <%= link_to "#{a_pre[0].lien_redir}", { class: "aa-annonce-titre"} do %>
                  <% unless a_pre[0].name.lines.first.nil? %>
                    <p class='p-titre'><%= a_pre[0].name.lines.first[0,70] %></p>
                  <% end %>
                  <% if a_pre[0].lien_image.nil? %>
                    <%= image_tag("data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==")  %>
                  <% else %>
                    <%= image_tag("data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==", data: { original: a_pre[0].lien_image })  %>
                  <% end %>
  
                  
                  
                  <% unless a_pre[0].texte.lines.first.nil? %>
                    <p class='p-description-annonceur'><%= a_pre[0].texte %></p>
                  <% end %>
                <% end %>
              </div>
              <% a_pre.slice!(0) %>
              <% i = 0 %>
            <% end %>
         <% end %>
           
         
       
          <div class="grid-item aa-formule-normal">
            <%= link_to showannonces_path(t.slug), { class: "aa-annonce-titre"} do %>
              <% if t.photo.url.nil? %>
                <%= image_tag("data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==")  %>
              <% else %>
  
                <%= image_tag("data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==", data: { original: t.photo.low.exifignore })  %>
              <% end %>
              <% unless t.name.lines.first.nil? %>
                <p class='p-titre'><%= t.name.lines.first[0,70] %></p>
              <% end %>
                
              <% unless t.description.lines.first.nil? %>
                <p class='p-description'><%= t.description.lines.first[0,70] %></p>
              <% end %>
              
            <% end %>
          </div>
          <% i += 1 %>
          <% j += 1 %>
        <% end %>
      <% end %>
     
  </div>
</div>
