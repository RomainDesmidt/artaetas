<div class="aa-new-bg">
  <div class="aa-new-container">
    <%= simple_form_for(@annonce) do |f| %>
    <div class="aa-new-accroche">Deposer une annonce</div>

    <div class="aa-new-containerfield">
      <div class="aa-new-titrefield">Votre Annonce</div>
      <div class="aa-new-vafield">
        <!-- [...] -->
        <%= f.input :name %>
        <%= f.input :description, placeholder: "Seule la premiere ligne apparait dans l'index max 50 caracteres" %>
        <%= f.input :prix, placeholder: "â‚¬", input_html: { class: 'aa-textalignright' } %>
        <%= f.input :photo, :input_html => { :onchange => "document.getElementById('previewPhoto').src = window.URL.createObjectURL(this.files[0])" } %>
        <!-- <img class="aa-edit-thumbnail" id="previewPhoto"></img> -->
        <%= cl_image_tag @annonce.photo, class: 'aa-edit-thumbnail' , id: "previewPhoto" %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.input :photo_un, :input_html => { :onchange => "document.getElementById('previewPhotoUn').src = window.URL.createObjectURL(this.files[0])" }  %>
        <!-- <img class="aa-edit-thumbnail" id="previewPhotoUn"></img> -->
        <%= cl_image_tag @annonce.photo_un, class: 'aa-edit-thumbnail' , id: "previewPhotoUn" %>
        <%= f.input :photo_un_cache, as: :hidden %>
        <%= f.input :photo_deux, :input_html => { :onchange => "document.getElementById('previewPhotoDeux').src = window.URL.createObjectURL(this.files[0])" }  %>
        <%= cl_image_tag @annonce.photo_deux, class: 'aa-edit-thumbnail' , id: "previewPhotoDeux" %>
        <!-- <img class="aa-edit-thumbnail" id="previewPhotoDeux"></img> -->
        <%= f.input :photo_deux_cache, as: :hidden %>
        <!-- [...] -->
      </div>
    </div>
    <div class="aa-new-containerfield">
      <div class="aa-new-titrefield">Vos Tags</div>
      <div class="aa-new-vafield">
        <p class="aa-new-label">Categories</p>
        <% for categorie in Categorie.all %>
          <% if @categories.include?(categorie.id) %>
            <label>
            <%= check_box_tag "annonce[categorie_ids][]", categorie.id, true %>
            <%=h categorie.name %></label><br />
          <% else %>
            <%= check_box_tag "annonce[categorie_ids][]", categorie.id%>
            <%=h categorie.name %></label><br />
          <% end %>
         <% end %>

        <p class="aa-new-label">Courants</p>
        <% for courant in Courant.all %>
          <% if @courants.include?(courant.id) %>
            <label>
            <%= check_box_tag "annonce[courant_ids][]", courant.id, true %>
            <%=h courant.name %></label><br />
          <% else %>
            <label>
            <%= check_box_tag "annonce[courant_ids][]", courant.id %>
            <%=h courant.name %></label><br />
          <% end %>
        <% end %>

        <p class="aa-new-label">Couleurs</p>
        <% for couleur in Couleur.all %>
          <% if @couleurs.include?(couleur.id) %>
            <label>
            <%= check_box_tag "annonce[couleur_ids][]", couleur.id, true %>
            <%=h couleur.couleur_dominante %></label><br />
          <% else %>
            <label>
            <%= check_box_tag "annonce[couleur_ids][]", couleur.id %>
            <%=h couleur.couleur_dominante %></label><br />
          <% end %>
        <% end %>

      </div>
    </div>

    <div class="aa-new-containerfield">
      <div class="aa-new-titrefield">Vos Criteres</div>
      <div class="aa-new-vafield">
      <%= f.input :format , placeholder: "" %>
      <%= f.input :disposition, placeholder: "Portrait, Paysage" %>
      <%= f.input :hauteur, placeholder: "cm", input_html: { class: 'aa-textalignright' } %>
      <%= f.input :largeur, placeholder: "cm", input_html: { class: 'aa-textalignright' } %>
      <%= f.input :profondeur, placeholder: "cm", input_html: { class: 'aa-textalignright' } %>
      <%= f.input :oeuvre_limite, placeholder: "nombre d'oeuvre editee" %>
      <%= f.input :oeuvre_unique %>
      <%= f.input :oeuvre_illimite %>
      <%= f.input :certificat_authenticite %>
      <%= f.input :facture_achat %>
      <%= f.input :encadrement %>
      <%= f.input :etat_neuf %>
      </div>
    </div>
    <%= f.submit "Modifier l'annonce", class: "btn btn-primary aa-mobile-btn" %>
    <% end %>
  </div>
</div>
