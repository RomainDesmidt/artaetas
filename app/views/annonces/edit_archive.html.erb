        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <input name="annonce[archive]" type="hidden" value="0">
        <input class="form-check-input boolean optional aa-archive-mainquestion" type="checkbox" value="1" name="annonce[archive]" id="annonce_archive" style="left: 24%; position: absolute;">
        <label class="form-check-label boolean optional" for="annonce_archive" style="left: 25%; position: absolute;">Je souhaite archiver mon annonce => elle sera visible sur mon profil membre</label>
