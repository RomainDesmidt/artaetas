<div style="margin-top: 55px;"></div>
<div style="margin-left: 20%; margin-right: 20%; margin-top: 100px; max-width: 1066px;">
  <h2>Procédure de changement de mot de passe</h2>
  
  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>
  
    <%= f.input :reset_password_token, as: :hidden %>
    <%= f.full_error :reset_password_token %>
  
    <div class="form-inputs">
      <%= f.input :password,
                  label: "Nouveau mot de passe",
                  required: true,
                  autofocus: true,
                  hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation, label: "Confirmer votre nouveau mot de passe", required: true %>
    </div>
  
    <div class="form-actions">
      <%= f.button :submit, "Changer mon mot de passe", class: "btn btn-primary aa-mobile-btn aa-new-publierannonce" %>
    </div>
  <% end %>
</div>
<%#= render "devise/shared/links" %>
