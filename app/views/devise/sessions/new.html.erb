<% unless user_signed_in? %>
  <div class="modal fade show" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" style="overflow: initial; position: relative;">
  <!--<button type="button" class="close" data-dismiss="modal" aria-label="Close" style="position: absolute; top: 10px; right: 10px">-->
            <!--<span aria-hidden="true">&times;</span>-->
          </button>
    <div class="modal-dialog" role="document">
      <div class="modal-content" id="modal-content-signin" >
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Connexion</h5>
          <div class="aa-show-retour" style="right: 35px; top: 9px;">
            <%=link_to "/" do %> 
              <%= inline_svg "home.svg", class: "aa-show-retour-svg" %>
            <% end %>
          </div>
        </div>
        <div class="modal-body">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">

              <%= f.input :login,
                          required: false,
                          autofocus: true,
                          label: "Nom d'utilisateur" ,
                          input_html: { autocomplete: "login" }
                           %>
              <%= f.label :password, "Mot de passe" %>
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password" },
                          label: false %>
              <%= f.input :remember_me, label: "Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Se connecter", class: "btn btn-primary aa-signin-btn" %>
            </div>
          <% end %>


        </div>
        <div class="modal-footer">
        <h5 class="text-center">Pas de compte ?</h5>
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= simple_form_for(resource, as: resource_name, url: new_registration_path(resource_name), method: :get) do |f| %>
            <%= f.button :submit, "Creer un compte", class: "btn btn-primary aa-signin-btn" %>
          <% end %>
          <!-- < link_to "Creer un compte", new_registration_path(resource_name) > -->
        <% end %>
          <!-- <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button> -->
        </div>
      </div>
    </div>
  </div>
<% end %>
